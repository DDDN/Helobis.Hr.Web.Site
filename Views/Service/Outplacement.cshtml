@using Helobis.Hr.Web.Site.Resources

@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

@Html.Partial("_PartialCarousel")

<section class="container service-section" id="outplacement-section">
    <div class="inner">
        <div class="row">
            <div class="col-sm-12">
                <h1>@ResHeaders.Outplacement</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 service-content text-justify">
                <h4>Charakterystyka</h4>
                <p>@ResOutplacement.CharacteristicsText1</p>
                <p>@ResOutplacement.CharacteristicsText2</p>
                <div class="service-content-list full-width">
                    <h4>@ResOutplacement.Box1Header</h4>
                    <ul class="fa-ul ">
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutplacement.Box1Item1</h5></li>
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutplacement.Box1Item2</h5></li>
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutplacement.Box1Item3</h5></li>
                    </ul>
                </div>
                <h4>@ResHeaders.Advantages</h4>
                <p>@ResOutplacement.AdvantagesText1</p>
                <h4>@ResHeaders.Benefits</h4>
                <p>@ResOutplacement.BenefitsText1</p>
            </div>
        </div>
    </div>
</section>