@using Helobis.Hr.Web.Site.Resources

@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

@Html.Partial("_PartialCarousel")

<section class="container service-section" id="outsourcing-section">
    <div class="inner">
        <div class="row">
            <div class="col-sm-12">
                <h1>@ResHeaders.Outsourcing</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-justify service-content">
                <h4>@ResHeaders.Characteristic</h4>
                <p>@ResOutsourcing.CharacteristicsText1</p>
                <div class="service-content-list full-width">
                    <h4>@ResOutsourcing.ExamplesBoxHeder</h4>
                    <ul class="fa-ul">
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutsourcing.ExamplesBoxItem1</h5></li>
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutsourcing.ExamplesBoxItem2</h5></li>
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutsourcing.ExamplesBoxItem3</h5></li>
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutsourcing.ExamplesBoxItem4</h5></li>
                        <li><h5><i class="fa-li fa fa-check-square"></i>@ResOutsourcing.ExamplesBoxItem5</h5></li>
                    </ul>
                </div>
                <h4>@ResHeaders.AdvantagesAndBenefits</h4>
                <p>@ResOutsourcing.AdvantagesAndBenefitsText1</p>
            </div>
        </div>
    </div>
</section>